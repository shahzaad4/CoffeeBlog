@{
    ViewData["Title"] = "Home";
}

<style>
    .home-hero {
        background-color: #2e2a27; /* Deep espresso background */
        color: #f4f1ee;
        padding: 80px 20px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.6);
    }

        .home-hero h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            color: #d6c2b3;
        }

        .home-hero p.lead {
            color: #cdb8a0;
            font-size: 1.25rem;
        }

        .home-hero img {
            border: 4px solid #6f4e37;
            margin-top: 30px;
        }

    .btn-coffee {
        background-color: #6f4e37;
        color: white;
    }

        .btn-coffee:hover {
            background-color: #5a3e2b;
        }
</style>

<div class="container">
    <div class="home-hero text-center">
        <h1>Welcome to Brewed Thoughts</h1>
        <p class="lead">A cozy place to share and sip ideas, one post at a time.</p>

        <img src="https://images.unsplash.com/photo-1509042239860-f550ce710b93?fit=crop&w=1000&q=80"
             class="img-fluid rounded shadow"
             style="max-height: 400px;"
             alt="coffee blog" />

        <div class="mt-4">
            <a class="btn btn-coffee btn-lg" asp-controller="Post" asp-action="Index">☕ Explore Blog Posts</a>
        </div>
    </div>
</div>
