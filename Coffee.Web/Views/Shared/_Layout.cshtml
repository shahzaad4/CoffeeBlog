<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Coffee Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Roboto&display=swap" rel="stylesheet" />

    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f6f2;
            color: #3e342b;
        }

        header, footer {
            background-color: #4b3832;
            color: #fff;
        }

        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            color: #fff;
        }

        .nav-link {
            color: #f4f1ee !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #d6c2b3 !important;
            }

        .btn-coffee {
            background-color: #6f4e37;
            color: white;
        }

            .btn-coffee:hover {
                background-color: #5a3e2b;
            }

        .coffee-card {
            background: #fff8e7;
            border: 1px solid #d2b48c;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(125, 92, 41, 0.2);
            transition: 0.3s;
        }

            .coffee-card:hover {
                box-shadow: 0 6px 12px rgba(125, 92, 41, 0.35);
            }

        .coffee-card-title {
            color: #4b3621;
            font-weight: bold;
        }

        .coffee-card-text {
            color: #5c4033;
        }

        footer small {
            color: #d6c2b3;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Brewed Thoughts ☕</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Post" asp-action="Index">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                        <!-- Optional: auth links later -->
                        @*<li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center py-4">
        <small>&copy; @DateTime.Now.Year Brewed Thoughts | Crafted with ☕ & ❤️</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
