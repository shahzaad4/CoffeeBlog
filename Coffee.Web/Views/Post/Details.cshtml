@model Coffee.Web.DTOs.PostDto

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="display-4 mb-3">@Model.Title</h1>

            <p class="text-muted">Published on @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>


            @if(User.Identity.IsAuthenticated){

                <div class="mb-3">
                    <a asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>

                    <form asp-controller="Post" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>

            }
            
            <hr />

            <div class="mt-4 post-content">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>
